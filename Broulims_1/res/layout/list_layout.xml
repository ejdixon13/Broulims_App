<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >


    <TextView
        android:id="@+id/itemLine"
        android:layout_width="fill_parent"
        android:layout_height="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:ellipsize="marquee"
        android:text="Item"
        android:paddingLeft="45dp"
        android:paddingTop="5dp"
        android:textSize="12sp" />
    
       <TextView
           android:id="@+id/priceLine"
           android:layout_width="fill_parent"
           android:layout_height="26dp"
           android:layout_below="@id/itemLine"
           android:ellipsize="marquee"
           android:paddingLeft="45dp"
       	   android:paddingTop="5dp"
           android:textSize="12sp" />
       
        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/priceLine"
            android:layout_alignLeft="@id/priceLine"
            android:paddingBottom="45dp"
            android:layout_alignParentLeft="true" />

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:orientation="horizontal" >

           <ImageView
               android:id="@+id/imageButtonSub1"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_gravity="bottom"
			   android:layout_marginTop="10dp"
			   android:layout_marginRight="10dp"
               android:src="@drawable/simple_minus" />

           <TextView
               android:id="@+id/itemQuantity1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
			   android:layout_gravity="center"
			   android:layout_marginTop="5dp"
               android:fontFamily="sans-serif-light"
               android:text="2"
               android:textSize="22sp" />

           <ImageView
               android:id="@+id/imageButtonAdd1"
               android:layout_width="30dp"
               android:layout_height="30dp"
			   android:layout_gravity="bottom"
			   android:layout_marginTop="10dp"
			   android:layout_marginLeft="10dp"
               android:src="@drawable/simple_plus" />

       </LinearLayout>


</RelativeLayout> 